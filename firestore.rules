rules_version = '2';
// Last updated: 2025-12-19 04:48 UTC - Allow client setup UPDATE
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    function isArtist() {
      return isAuthenticated() && getUserData().role == 'artist';
    }
    
    // Prevent role changes
    function roleNotChanged() {
      return !('role' in request.resource.data) || 
             request.resource.data.role == resource.data.role;
    }
    
    // Prevent artistId changes
    function artistIdNotChanged() {
      return !('artistId' in request.resource.data) || 
             request.resource.data.artistId == resource.data.artistId;
    }
    
    // Users collection
    match /users/{userId} {
      
      // CRITICAL: Allow unauthenticated read for client setup
      allow read: if true;
      
      // READ ACCESS
      allow read: if isAuthenticated() && (
        // Users can read their own document
        isOwner(userId) ||
        // Artists can read their clients
        (isArtist() && resource.data.artistId == request.auth.uid)
      );
      
      // CREATE ACCESS
      allow create: if isAuthenticated() && (
        // Artists can create their own account
        (request.resource.data.role == 'artist' && 
         isOwner(userId)) ||
        // Artists can create clients with their artistId
        (request.resource.data.role == 'client' && 
         request.resource.data.artistId == request.auth.uid &&
         isArtist()) ||
        // NEW: Clients can create their own account during setup
        (request.resource.data.role == 'client' && 
         isOwner(userId) &&
         'artistId' in request.resource.data)  // Must have an artistId
      );
      
      // UPDATE ACCESS  
      // CRITICAL: Allow completing client setup (must be FIRST to catch early auth state)
      allow update: if resource.data.role == 'client' &&
                       resource.data.hasCompletedSetup == false &&
                       request.resource.data.hasCompletedSetup == true;
      
      allow update: if isAuthenticated() && (
        // Artists can update their own data
        (isOwner(userId) && 
         resource.data.role == 'artist' &&
         roleNotChanged()) ||
        // Artists can update their clients
        (resource.data.role == 'client' && 
         resource.data.artistId == request.auth.uid &&
         isArtist() &&
         artistIdNotChanged() &&
         roleNotChanged()) ||
        // Clients can update their own data (but not role or artistId)
        (isOwner(userId) && 
         resource.data.role == 'client' &&
         roleNotChanged() &&
         artistIdNotChanged())
      );
      
      // DELETE ACCESS
      allow delete: if isAuthenticated() && (
        // Artists can delete their own account
        (isOwner(userId) && resource.data.role == 'artist') ||
        // Artists can delete their clients
        (resource.data.role == 'client' && 
         resource.data.artistId == request.auth.uid &&
         isArtist())
      );
    }
    
    // Notifications collection
    match /notifications/{notificationId} {
      // Artists can read their own notifications
      allow read: if isAuthenticated() && 
                     resource.data.artistId == request.auth.uid;
      
      // Artists can create notifications for themselves
      allow create: if isAuthenticated() && 
                       request.resource.data.artistId == request.auth.uid;
      
      // Artists can update their own notifications (mark as read)
      allow update: if isAuthenticated() && 
                       resource.data.artistId == request.auth.uid;
      
      // Artists can delete their own notifications
      allow delete: if isAuthenticated() && 
                       resource.data.artistId == request.auth.uid;
    }
    
    // Deny all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}